<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!--Root container-->
    <RelativeLayout
        android:id="@+id/root_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <!--View while view is collapsed-->
        <RelativeLayout
            android:id="@+id/collapse_view"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Icon of floating widget -->
            <ImageView
                android:id="@+id/collapsed_iv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/camera1"
                tools:ignore="ContentDescription"/>

            <!--Close button-->
            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="80dp"
                android:src="@drawable/ic_close"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <!--View while view is expanded-->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/expanded_container"
            android:visibility="gone"
            android:layout_width="380sp"
            android:layout_height="70sp"
            android:orientation="horizontal"
            xmlns:tools="http://schemas.android.com/tools"
            android:background="@drawable/retan">

            <ImageView
                android:id="@+id/esq_btn"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_marginTop="13sp"
                android:src="@mipmap/ic_esquerda"
                tools:ignore="ContentDescription" />

            <!--up button-->
            <ImageView
                android:id="@+id/up_btn"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_marginTop="13sp"
                android:src="@mipmap/ic_cima"
                tools:ignore="ContentDescription" />

            <!--down button-->
            <ImageView
                android:id="@+id/down_btn"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_marginTop="13sp"
                android:src="@mipmap/ic_baixo"
                tools:ignore="ContentDescription" />

            <!--Right button-->
            <ImageView
                android:id="@+id/dir_btn"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_marginTop="13sp"
                android:src="@mipmap/ic_direita"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/center_btn"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:layout_marginTop="25sp"
                android:layout_marginLeft="10sp"
                android:background="#000000"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/save_button"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="20sp"
                android:src="@drawable/saveicon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/open_button"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="5sp"
                android:src="@drawable/ic_open" />
            <ImageView
                android:id="@+id/close_button"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginBottom="4sp"
                android:src="@drawable/ic_close" />
        </LinearLayout>

        </LinearLayout>


    </RelativeLayout>
</FrameLayout>